{
  "version": 8,
  "sources": {
    "recinto-source": {
      "type": "vector",
      "tiles": ["https://sigpac-hubcloud.es/mvt/recinto@3857@pbf/{z}/{x}/{y}.pbf"],
      "minzoom": 5,
      "maxzoom": 15
    }
  },
  "layers": [
    {
      "id": "recinto-layer-fill",
      "type": "fill",
      "source": "recinto-source",
      "source-layer": "recinto",
      "paint": {
        "fill-color": "rgba(255, 0, 0, 0.15)",
        "fill-antialias": true,
        "fill-translate": [0, 0]
      }
    },
    {
      "id": "recinto-layer-line",
      "type": "line",
      "source": "recinto-source",
      "source-layer": "recinto",
      "paint": {
        "line-color": "#ff0000",
        "line-width": {
          "base": 1.5,
          "stops": [
            [5, 0.5],
            [10, 1.0],
            [13, 1.8],
            [15, 2.5],
            [17, 4.0],
            [20, 6.0],
            [22, 10.0]
          ]
        },
        "line-opacity": 0.9,
        "line-translate": [0, 0],
        "line-blur": 0.1,
        "line-join": "round",
        "line-cap": "round"
      }
    }
  ]
}